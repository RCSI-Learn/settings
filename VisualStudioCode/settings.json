{
  //https://cheatography.com/thissitesucks/cheat-sheets/vscode-vim/
  /*Folding
    zf{count}j Create a fold from the cursor down {count} lines
    zf/{paÂ­ttern} Create a fold from the cursor to {pattern}
    za Toggle fold at the cursor
    zo Open fold under cursor
    zO Open all folds
    zc Close fold under cursor
    zM Close all folds
    zd Delete fold at the cursor
    zE Delete all folds
  */
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Default Dark Modern",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "workbench.iconTheme": "material-icon-theme",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Hack Nerd Font Mono",
  "editor.linkedEditing": true,
  "editor.lineNumbers": "relative",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.foldfix": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["C-h"],
      "after": ["<left>"]
    },
    {
      "before": ["C-l"],
      "after": ["<right>"]
    }
  ],
  "vim.normalModeKeyBindings": [
    // NAVIGATION
    // switch b/w buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },

    // splits
    { "before": ["leader", "w", "k"], "commands": [":vsplit"] },
    { "before": ["leader", "w", "h"], "commands": [":split"] },

    // panes
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] },
    // {
    //   "before": ["<C-n>"],
    //   "commands": [":nohl"]
    // },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.terminal.focus"],
      "after": ["<backspace>"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["editor.action.addSelectionToNextFindMatch"]
    },
    {
      "before": ["<leader>", "D"],
      "commands": ["editor.action.addSelectionToPreviousFindMatch"]
    },
    {
      "before": ["<leader>", "f", "d"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "f", "`"],
      "after": ["c", "i", "w", "`", "`", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "'"],
      "after": ["c", "i", "w", "'", "'", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "\""],
      "after": ["c", "i", "w", "\"", "\"", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "("],
      "after": ["c", "i", "w", "(", ")", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", ")"],
      "after": ["c", "i", "w", "(", ")", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "["],
      "after": ["c", "i", "w", "[", "]", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "]"],
      "after": ["c", "i", "w", "[", "]", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "{"],
      "after": ["c", "i", "w", "{", "}", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "}"],
      "after": ["c", "i", "w", "{", "}", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "<"],
      "after": ["c", "i", "w", "<", ">", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", ">"],
      "after": ["c", "i", "w", "<", ">", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "q", "i"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "q", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "d", "i"],
      "commands": ["editor.debug.action.showDebugHover"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "g", "e"],
      "commands": ["editor.action.marker.nextInFiles"]
    },
    {
      "before": ["<leader>", "g", "E"],
      "commands": ["editor.action.marker.prevInFiles"]
    },
    {
      "before": ["<leader>", "t", "q"],
      "commands": ["workbench.action.hideEditorTabs"]
    },
    {
      "before": ["<leader>", "t", "a"],
      "commands": ["workbench.action.showMultipleEditorTabs"]
    }
  ],
  "vim.visualModeKeyBindings": [
    // NAVIGATION
    // switch b/w buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },

    // splits
    { "before": ["leader", "w", "k"], "commands": [":vsplit"] },
    { "before": ["leader", "w", "h"], "commands": [":split"] },

    // panes
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.terminal.focus"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] },
    {
      "before": ["<leader>", "d"],
      "commands": ["editor.action.addSelectionToNextFindMatch"]
    },
    {
      "before": ["<leader>", "D"],
      "commands": ["editor.action.addSelectionToPreviousFindMatch"]
    },
    {
      "before": ["<leader>", "f", "`"],
      "after": ["c", "`", "`", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "'"],
      "after": ["c", "'", "'", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "\""],
      "after": ["c", "\"", "\"", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "("],
      "after": ["c", "(", ")", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", ")"],
      "after": ["c", "(", ")", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "["],
      "after": ["c", "[", "]", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "]"],
      "after": ["c", "[", "]", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "{"],
      "after": ["c", "{", "}", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "}"],
      "after": ["c", "{", "}", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", "<"],
      "after": ["c", "<", ">", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "f", ">"],
      "after": ["c", "<", ">", "<Esc>", "P"]
    },
    {
      "before": ["<leader>", "q", "i"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "d", "i"],
      "commands": ["editor.debug.action.showDebugHover"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "g", "e"],
      "commands": ["editor.action.marker.nextInFiles"]
    },
    {
      "before": ["<leader>", "g", "E"],
      "commands": ["editor.action.marker.prevInFiles"]
    },
    {
      "before": ["<leader>", "t", "q"],
      "commands": ["workbench.action.hideEditorTabs"]
    },
    {
      "before": ["<leader>", "t", "a"],
      "commands": ["workbench.action.showMultipleEditorTabs"]
    },
    //fix the error when paste over selected word in visual mode override the register yanked with the selected word
    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"]
    }
  ],
  "workbench.editor.showTabs": "none"
}
